---
interface Props {
  correct: string;
  incorrect: string;
}

const { correct, incorrect } = Astro.props;
---

<div class="grid md:grid-cols-2 gap-4 my-6">
  <div class="bg-green-50 border border-green-200 rounded-lg p-4">
    <div class="flex items-center gap-2 mb-2">
      <span class="text-green-600">✅</span>
      <h4 class="font-semibold text-green-800">Correct</h4>
    </div>
    <pre class="bg-green-100 text-green-900 p-3 rounded text-sm overflow-x-auto"><code>{correct}</code></pre>
  </div>
  
  <div class="bg-red-50 border border-red-200 rounded-lg p-4">
    <div class="flex items-center gap-2 mb-2">
      <span class="text-red-600">❌</span>
      <h4 class="font-semibold text-red-800">Incorrect</h4>
    </div>
    <pre class="bg-red-100 text-red-900 p-3 rounded text-sm overflow-x-auto"><code>{incorrect}</code></pre>
  </div>
</div> 