{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./"],
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "*.d.ts",
    "test-*.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "skipLibCheck": true
    }
  }
}

